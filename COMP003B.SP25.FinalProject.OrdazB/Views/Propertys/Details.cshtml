@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model COMP003B.SP25.FinalProject.OrdazB.Models.Property

@{
    ViewData["Title"] = "Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View Property</h1>

<div>
    <h4>Property</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div class="col-md-4">
    <h4>ReviewsController</h4>
    <ul>
        @foreach (Review review in ViewBag.Propertys)
        {
            <li>@review.Comment</li>
        }
    </ul>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PropertyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
